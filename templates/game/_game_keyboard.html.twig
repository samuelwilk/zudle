{% set alphabet = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'|split('') %}
{% set baseButtonClass = 'w-11 h-16 flex items-center justify-center font-bold rounded text-white' %}

<div class="flex justify-center">
    <div class="grid grid-rows-3 w-1/3">
        <div class="flex w-full mx-auto mb-2 justify-between">
            {% for letter in alphabet|slice(0, 10) %}
                {% set evaluation = gameState.evaluatedKeyboard[letter] %}
                {% set buttonClass = baseButtonClass %}
                {% if evaluation == constant('App\\Enum\\LetterEvaluationEnum::CORRECT') %}
                    {% set buttonClass = buttonClass ~ ' bg-correct' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::PRESENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-present' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::ABSENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-absent' %}
                {% else %}
                    {% set buttonClass = buttonClass ~ ' bg-unused-key' %}
                {% endif %}
                <button data-keyboard-target="key" data-letter="{{ letter }}" class="{{ buttonClass }}"
                        data-action="keyboard#handleButtonClick">{{ letter }}</button>
            {% endfor %}
        </div>

        <div class="flex w-full mx-auto mb-2 justify-between">
            {# spacer #}
            <div class="w-2 h-16"></div>
            {% for letter in alphabet|slice(10, 9) %}
                {% set evaluation = gameState.evaluatedKeyboard[letter] %}
                {% set buttonClass = baseButtonClass %}
                {% if evaluation == constant('App\\Enum\\LetterEvaluationEnum::CORRECT') %}
                    {% set buttonClass = buttonClass ~ ' bg-correct' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::PRESENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-present' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::ABSENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-absent' %}
                {% else %}
                    {% set buttonClass = buttonClass ~ ' bg-unused-key' %}
                {% endif %}
                <button data-keyboard-target="key" data-letter="{{ letter }}" class="{{ buttonClass }}"
                        data-action="keyboard#handleButtonClick">{{ letter }}</button>
            {% endfor %}
            {# spacer #}
            <div class="w-2 h-16"></div>
        </div>

        <div class="flex w-full mx-auto mb-2 justify-between">
            <button data-keyboard-target="key" data-letter="Enter"
                    class="w-16 h-16 flex items-center justify-center font-bold rounded text-white text-xs bg-unused-key"
                    data-action="keyboard#handleButtonClick">ENTER
            </button>
            {% for letter in alphabet|slice(19, 7) %}
                {% set evaluation = gameState.evaluatedKeyboard[letter] %}
                {% set buttonClass = baseButtonClass %}
                {% if evaluation == constant('App\\Enum\\LetterEvaluationEnum::CORRECT') %}
                    {% set buttonClass = buttonClass ~ ' bg-correct' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::PRESENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-present' %}
                {% elseif evaluation == constant('App\\Enum\\LetterEvaluationEnum::ABSENT') %}
                    {% set buttonClass = buttonClass ~ ' bg-absent' %}
                {% else %}
                    {% set buttonClass = buttonClass ~ ' bg-unused-key' %}
                {% endif %}
                <button data-keyboard-target="key" data-letter="{{ letter }}" class="{{ buttonClass }}"
                        data-action="keyboard#handleButtonClick">{{ letter }}</button>
            {% endfor %}
            <button data-keyboard-target="key" data-letter="Backspace"
                    class="w-16 h-16 flex items-center justify-center font-bold rounded text-white text-xs bg-unused-key"
                    data-action="keyboard#handleButtonClick">DEL
            </button>
        </div>
    </div>
</div>
