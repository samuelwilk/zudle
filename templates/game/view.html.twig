{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto p-4">
        <div id="game_{{ gameState.game.id }}" {{ turbo_stream_listen('game_state') }}>
            <twig:GameBoard gameState="{{ gameState }}" />
        </div>
        <twig:Form:GuessForm game="{{ gameState.game }}" />
        <div id="keyboard">
            {{ include('game/_game_keyboard.html.twig') }}
        </div>
    </div>
{% endblock %}
